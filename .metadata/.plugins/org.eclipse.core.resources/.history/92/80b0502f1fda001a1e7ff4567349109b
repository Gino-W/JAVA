package C_13_Date;

import org.junit.Test;

/**
 * @author: Gino
 * @Data: 9 Aug 202016:48:33
 * @File_Name: MateDemo.java
 * 
 */
public class MateDemo {
	/*
	 * Math:用于执行基本的数学运算的方法
	 * 		Math.E		e
	 * 		Math.PI		圆周率
	 * 		Math.sin	正切
	 * 		floor() 	向下取整
	 * 		ceil()		向上取整
	 * 		round()		四舍五入
	 * 		random()	0.0-1.0的随机数，包含0.0，不包含1.0
	 * 		
	 */
	@Test
	public void testMath() {
		double floor = Math.floor(1.6);
		double ceil = Math.ceil(1.3);
		long round = Math.round(1.0);
		double random = Math.random();
		
		System.out.println(random);
		
	}

}
