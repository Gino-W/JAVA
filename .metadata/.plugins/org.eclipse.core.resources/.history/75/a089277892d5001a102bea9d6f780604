package C_11;

/**
 * @author: Gino
 * @Data: 3 Aug 202021:53:42
 * @File_Name: Demo1_new.java
 * 
 */
public class Demo1_new {
	public static void main(String[] args) {
		Status createStatus1 = Status.CREATE;
		System.out.println(createStatus1.getName()+"--->"+createStatus1.getValue());
		
	}
}

//枚举类
enum Status1{
	//新建状态
	CREATE("新建状态", 0),
	//运行状态
	RUNNABLE("运行状态", 1),
	//阻塞状态
	BLOCK("阻塞状态", 2),
	//睡眠状态
	WAITING("睡眠状态", 3),
	//消亡状态
	TERMINATED("消亡状态", 4);
	
	//1.提供类的属性，声明为private final
	private final String name;
	private final Integer value;
	
	//2.在构造函数中初始化数据
	private Status1(String name, Integer value) {
		this.name = name;
		this.value = value;
	}
	
	//3.通过公共方法获取属性值
	public String getName() {
		return name;
	}
	public Integer getValue() {
		return value;
	}
	
	public void show() {
		System.out.println("显示状态");
	}
	
}

